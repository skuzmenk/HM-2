<Window x:Class="НМ2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:НМ2"
        mc:Ignorable="d"
        Title="Класифікація квіток Iris" Height="450" Width="800" Background="#222">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="TrainButton" Content="Навчити" Click="TrainButton_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="PredictButton" Content="Передбачити" Click="PredictButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Введіть ознаки квітки Iris:" 
                       Foreground="LightYellow" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Перша пара -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                    <TextBlock Text="Довжина чашолистка" Foreground="White"/>
                    <TextBox x:Name="Input1" Margin="0,5,0,0" />
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                    <TextBlock Text="Ширина чашолистка" Foreground="White"/>
                    <TextBox x:Name="Input2" Margin="0,5,0,0" />
                </StackPanel>

                <!-- Друга пара -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                    <TextBlock Text="Довжина пелюстки" Foreground="White"/>
                    <TextBox x:Name="Input3" Margin="0,5,0,0" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                    <TextBlock Text="Ширина пелюстки" Foreground="White"/>
                    <TextBox x:Name="Input4" Margin="0,5,0,0" />
                </StackPanel>
            </Grid>

            <TextBlock x:Name="OutputText" Foreground="LightGreen" FontSize="16" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
